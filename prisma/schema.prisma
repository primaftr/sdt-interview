generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  birthday  DateTime
  timezone  String
  email     String   @unique()
  createdAt DateTime @default(now())

  messages MessageOutbox[]
}

model MessageOutbox {
  id          String    @id @default(uuid())
  userId      String
  messageType String
  scheduledAt DateTime
  sentAt      DateTime?
  attempts    Int       @default(0)
  lockedAt    DateTime?
  nextRetryAt DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([sentAt, scheduledAt, nextRetryAt])
}
